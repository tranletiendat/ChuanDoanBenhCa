@model ChanDoanBenhCa.Models.NguoiDung

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit NguoiDung</title>
    <!-- Thêm Bootstrap để cải thiện giao diện -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">
        <h4 class="text-center">Chỉnh sửa thông tin Người dùng</h4>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="TenNd" class="control-label">Tên Người Dùng</label>
                        <input asp-for="TenNd" class="form-control" placeholder="Nhập tên người dùng" />
                        <span asp-validation-for="TenNd" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="QuyenNguoiDung" class="control-label">Quyền Người Dùng</label>
                        <input asp-for="QuyenNguoiDung" class="form-control" placeholder="Nhập quyền người dùng" />
                        <span asp-validation-for="QuyenNguoiDung" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <!-- Thêm Bootstrap JS để hỗ trợ các tính năng động như validation -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
