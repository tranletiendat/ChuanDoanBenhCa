@model ChanDoanBenhCa.Models.BenhCa

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chỉnh Sửa Bệnh Cá</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h4 class="mb-4">Chỉnh Sửa Bệnh Cá</h4>

        <!-- Form chỉnh sửa bệnh cá -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TenBc" class="control-label">Tên Bệnh Cá</label>
                <input asp-for="TenBc" class="form-control" />
                <span asp-validation-for="TenBc" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTaChiTietBenhCa" class="control-label">Mô Tả Chi Tiết Bệnh Cá</label>
                <textarea asp-for="MoTaChiTietBenhCa" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MoTaChiTietBenhCa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary" />
            </div>
        </form>

        <!-- Liên kết quay lại danh sách -->
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
