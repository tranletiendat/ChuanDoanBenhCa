@model IEnumerable<ChanDoanBenhCa.Models.BenhCa>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Bệnh Cá</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h4 class="mb-4">Danh Sách Bệnh Cá</h4>

        <!-- Thêm liên kết tạo mới -->
        <p>
            <a asp-action="Create" class="btn btn-success mb-3">Tạo Mới</a>
        </p>


        <!-- Bảng danh sách bệnh cá -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TenBc)</th>
                    <th>@Html.DisplayNameFor(model => model.MoTaChiTietBenhCa)</th>
                    <th>@Html.DisplayNameFor(model => model.AnhBenhCas)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenBc)</td>
                        <td>@Html.DisplayFor(modelItem => item.MoTaChiTietBenhCa)</td>
                        <td>
                            @foreach (var anh in item.AnhBenhCas)

                            {
                                <img src="@anh.DuongDanAnh" alt="Ảnh Bệnh Cá" width="100" height="100" />
                            }
                        </td>
                        <td>
                            <!-- Nút sửa và xóa -->
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaBc }, new { @class = "btn btn-warning btn-sm" })
                            <a href="#" onclick="if (confirm('Bạn có chắc chắn muốn xóa không?') == true) { location.href = '/BenhCa/Delete?id=@item.MaBc' }" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
