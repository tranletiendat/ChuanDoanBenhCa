@model IEnumerable<ChanDoanBenhCa.Models.NguoiNuoiCa>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <!-- Thêm liên kết đến Bootstrap để tạo kiểu cho bảng -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Danh sách Người Nuôi Cá</h2>

        <p>
            <a class="btn btn-primary" asp-action="Create">Tạo Mới</a>
        </p>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HoTenNnc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sdt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiaChi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaNd)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTenNnc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sdt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaNd)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNnc }, new { @class = "btn btn-warning btn-sm" }) |
                            <a href="#" onclick="if (confirm('Bạn có chắc chắn muốn xóa không?') == true) { location.href = '/NguoiNuoiCa/Delete?id=@item.MaNnc' }" class="btn btn-light"><i class="fa fa-heart"></i>Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Nút quay lại trang Home -->
        <p>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Quay lại Trang Chủ</a>
        </p>
    </div>

    <!-- Thêm liên kết đến script của Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>