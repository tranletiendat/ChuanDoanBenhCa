@model IEnumerable<ChanDoanBenhCa.Models.BaiDang>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách Bài Đăng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h4 class="mb-4">Danh sách Bài Đăng</h4>
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-primary">Tạo Mới</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MoTa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaNnc)
                    </th>
                    <th class="text-center">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaNnc)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaBd" class="btn btn-warning btn-sm">
                                <i class="fa fa-pencil-alt"></i> Sửa
                            </a>
                            <a href="#" onclick="if (confirm('Bạn có chắc chắn muốn xóa không?') == true) { location.href = '/BaiDang/Delete?id=@item.MaBd' }" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Nút quay lại trang Home -->
        <p>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Quay lại Trang Chủ</a>
        </p>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
