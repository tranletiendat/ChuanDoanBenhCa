@{
    var isLoggedIn = ViewContext.HttpContext.Session.GetString("UserId") != null;

    var userName = ViewContext.HttpContext.Session.GetString("UserName");

    var isAdmin = ViewContext.HttpContext.Session.GetString("IsAdmin") == "admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chuẩn Đoán Bệnh Cá</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <!-- Header -->
    <header class="bg-light py-2 px-4 border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h5 mb-0">
                <i class="fa-solid fa-fish"></i> Chuẩn Đoán Bệnh Cá
            </h1>
            <div>
                @if (isLoggedIn)

                {
                    <span>Xin chào, <b>@userName</b>!</span>
                    <a class="btn btn-danger btn-sm ms-2" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                }

                else

                {
                    <a class="btn btn-success btn-sm me-2" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Register", "Account")">Đăng ký</a>
                }
            </div>
        </div>
    </header>

    <!-- Sidebar và Main Content -->
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-light border-end position-fixed h-100" style="width: 250px;">
            <ul class="nav flex-column p-3">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <i class="fa-solid fa-house"></i> Trang Chủ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "BaiDang")">
                        <i class="fa-solid fa-scroll"></i> Bài Đăng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Search", "BenhCa")">
                        <i class="fa-solid fa-search"></i> Tra Cứu
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("SearchByTrieuChung", "BenhCa")">
                        <i class="fa-solid fa-briefcase-medical"></i> Chuẩn Đoán
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "TinTucDichBenh")">
                        <i class="fa-solid fa-bullhorn"></i> Tin Tức
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "DanCa")">
                        <i class="fa-solid fa-fish"></i> Đàn cá
                    </a>
                </li>

                @if (isAdmin)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "BenhCa")">
                            <i class="fa-solid fa-briefcase-medical"></i> Bệnh Cá
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "TrieuChungBenhCa")">
                            <i class="fa-solid fa-file-waveform"></i> Triệu Chứng
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "BienPhapPhongNgua")">
                            <i class="fa-solid fa-hand-holding-medical"></i> Phòng ngừa
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "PhuongPhapDieuTri")">
                            <i class="fa-solid fa-capsules"></i> Điều trị
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "NguoiDungs")">
                            <i class="fa-solid fa-user"></i> Người dùng
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "NguoiNuoiCa")">
                            <i class="fa-solid fa-person"></i> Người nuôi cá
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BaoCaoThongKe", "BaoCaoThongKe")">
                            <i class="fa-solid fa-person"></i> Báo cáo thống kê
                        </a>
                    </li>
                }

            </ul>
        </nav>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4" style="margin-left: 250px;">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 border-top">
        &copy; 2024 ChanDoanBenhCa - All rights reserved.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
