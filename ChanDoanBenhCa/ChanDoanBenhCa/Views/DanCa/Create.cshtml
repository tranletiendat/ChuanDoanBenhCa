@model ChanDoanBenhCa.Models.DanCa

@{
    Layout = "_Layout";
      <!-- Dùng layout chung của ứng dụng để giữ phong cách -->
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tạo Mới DanCa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center">Tạo Mới DanCa</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="TenDanCa" class="control-label">Tên Đàn Cá</label>
                        <input asp-for="TenDanCa" class="form-control" />
                        <span asp-validation-for="TenDanCa" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                        <input asp-for="SoLuong" class="form-control" type="number" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TrangThai" class="control-label">Trạng Thái</label>
                        <input asp-for="TrangThai" class="form-control" />
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="MaNnc" class="control-label">Người Nuôi Cá</label>
                        <select asp-for="MaNnc" class="form-control" asp-items="ViewBag.Nnc">
                            <option value="">-- Chọn Người Nuôi Cá --</option> <!-- Tùy chọn rỗng -->
                        </select>
                        <span asp-validation-for="MaNnc" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
