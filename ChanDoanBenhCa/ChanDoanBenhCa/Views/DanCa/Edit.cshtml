@model ChanDoanBenhCa.Models.DanCa

@* @{
    Layout = "_Layout";
} *@

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit DanCa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h4 class="mb-4">Chỉnh sửa DanCa</h4>
        <hr />

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="TenDanCa" class="form-label"></label>
                        <input asp-for="TenDanCa" class="form-control" />
                        <span asp-validation-for="TenDanCa" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SoLuong" class="form-label"></label>
                        <input asp-for="SoLuong" class="form-control" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TrangThai" class="form-label"></label>
                        <input asp-for="TrangThai" class="form-control" />
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-link">Quay lại danh sách</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
