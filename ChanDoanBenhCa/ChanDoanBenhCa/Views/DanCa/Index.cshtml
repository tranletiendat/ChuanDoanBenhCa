@model IEnumerable<ChanDoanBenhCa.Models.DanCa>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh Sách Đàn Cá</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Danh Sách Đàn Cá</h2>
        <p>
            <a asp-action="Create" class="btn btn-success mb-3">Tạo Mới</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TenDanCa)</th>
                    <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
                    <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                    <th>@Html.DisplayNameFor(model => model.MaNnc)</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenDanCa)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                        <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaNnc)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.MaDc" class="btn btn-warning btn-sm">
                                <i class="fa fa-pencil-alt"></i> Sửa
                            </a> |
                            <a href="#" onclick="if (confirm('Bạn có chắc chắn muốn xóa không?') == true) { location.href = '/DanCa/Delete?id=@item.MaDc' }" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Nút quay lại trang Home -->
        <p>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Quay lại Trang Chủ</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
